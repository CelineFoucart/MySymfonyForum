{% extends 'base.html.twig' %}

{% block title %}Inscription | {{ website_name() }} {% endblock %}

{% block breadcrumb %} 
<li class="breadcrumb-item active" aria-current="page">Inscription</li> 
{% endblock %}

{% block body %}
    <section>
        <h2 class="h3 mb-3 font-weight-normal">Inscription</h2>
        {% for message in app.flashes('verify_email_error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
        {% endfor %}
        <div class="rounded-3 bg-default p-2">
            {{ form_start(registrationForm) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(registrationForm.username) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(registrationForm.email) }}
                    </div>
                </div>
                {{ form_row(registrationForm.plainPassword) }}
                {{ form_row(registrationForm.agreeTerms) }}

                <button type="submit" class="btn btn-primary mt-2">S'inscrire</button>
            {{ form_end(registrationForm) }}
        </div>
    </section>
{% endblock %}
