{% extends 'base.html.twig' %}

{% block title %} {{ category.title }} | {{ website_name() }}{% endblock %}

{% block breadcrumb %} 
<li class="breadcrumb-item active" aria-current="page">{{ category.title }}</li> 
{% endblock %}

{% block body %}
<h2>{{ category.title }}</h2>
<p>{{ category.description }}</p>

<section class="rounded-3 p-2 forum-section">
    <h2 class="section-title">Forums</h2>

    {% for forum in forums %}
        <article class="forum-row bg-default">
            <h3 class="forum-row-title">
                <a href="{{ path('forum', {id: forum.id, slug: forum.slug}) }}">{{ forum.title }}</a>
            </h3>
            <p class="forum-description">{{ forum.description }}</p>
        </article>
    {% else %}
        <article class="forum-row bg-default">
            <h3 class="forum-row-title">Cette cat√©gorie est vide</h3>
        </article>
    {% endfor %}

</section>
{% endblock %}
