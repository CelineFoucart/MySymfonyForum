{% extends 'base.html.twig' %}

{% block title %}Connexion | {{ website_name() }} {% endblock %}

{% block breadcrumb %} 
<li class="breadcrumb-item active" aria-current="page">Connexion</li> 
{% endblock %}

{% block body %}
<section>
    <h2 class="h3 mb-3 font-weight-normal">Veuillez vous authentifier</h2>
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="rounded-3 bg-default p-2">
        <form method="post">    
            <label for="inputUsername">Pseudo</label>
            <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
            <label for="inputPassword" class="mt-2">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >
            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}
            <button class="btn btn btn-primary mt-2" type="submit">
                Connexion
            </button>
        </form>
    </div>
</section>


{% endblock %}
