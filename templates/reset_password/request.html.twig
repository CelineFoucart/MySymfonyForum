{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <section>
        <h2 class="h3 mb-3 font-weight-normal">Réinitialiser votre mot de passe</h2>
        {% for flashError in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}

        <article class="rounded-3 bg-default p-2">
            <h3 class="text-uppercase h6 border-bottom border-dark">Remplissez ce formulaire pour réinitialiser votre mot de passe</h3>
            {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}
                <div>
                    <small>  
                        Entrez votre adresse e-mail et nous vous enverrons un
                        lien pour réinitialiser votre mot de passe.
                    </small>
                </div>

                <button class="btn btn-primary mt-2">Envoyer un e-mail de réinitialisation du mot de passe</button>
            {{ form_end(requestForm) }}
        </article>
    </section>

{% endblock %}
