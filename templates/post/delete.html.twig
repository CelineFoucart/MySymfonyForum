{% extends 'base.html.twig' %}

{% block title %} Supprimer un post | {{ website_name() }}{% endblock %}

{% set topic = post.topic %}

{% block breadcrumb %} 
    {{ include('topic/_breadcrumb_topic.html.twig') }}
{% endblock %}

{% block body %}
<section>
    <h2><a href="{{ path('topic', {id:topic.id, slug:topic.slug}) }}">{{ topic.title }}</a></h2>
    <article class="rounded-3 bg-default my-2 p-2">
        <h3 class="text-uppercase h6 border-bottom border-dark">Supprimer un message</h3>
        <p class="text-danger fw-bold text-center">Êtes-vous sûr de vouloir effacer ce message ? Toute suppression est définitive !</p>

        <form method="post" class="text-center" action="{{ path('post_delete', {'id': post.id}) }}">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
            <button class="btn btn-danger" id="submit">Supprimer</button>
        </form>
    </article>
</section>
{% endblock %}