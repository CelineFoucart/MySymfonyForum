<div class="btn-group position-absolute top-0 end-0">
    {% if is_locked(topic) == false %}
        {% if can_edit(app.user, post) %}
            <a href="{{path('post_delete', {id:post.id})}}" 
                class="btn btn-outline-secondary btn-sm" 
                data-bs-toggle="tooltip" 
                data-bs-placement="top"
                title="Supprimer">
                <i class="bi bi-trash-fill"></i>
            </a>
            <a href="{{path('post_edit', {id:post.id})}}" 
                class="btn btn-outline-secondary btn-sm" 
                data-bs-toggle="tooltip" 
                data-bs-placement="top"
                title="Editer">
                <i class="bi bi-pencil-fill"></i>
            </a>
        {% endif %}
        {% if can_moderate() %}
            <a href="{{path('post_view', {id:post.id})}}" 
                class="btn btn-outline-secondary btn-sm" 
                data-bs-toggle="tooltip" 
                data-bs-placement="top"
                title="Informations">
                <i class="bi bi-info-circle-fill"></i>
            </a> 
        {% endif %}
        {% if is_granted('ROLE_USER') %}
            <a href="{{path('post_report', {id:post.id})}}" 
                class="btn btn-outline-secondary btn-sm" 
                data-bs-toggle="tooltip" 
                data-bs-placement="top"
                title="Rapporter le message">
                <i class="bi bi-exclamation-triangle-fill"></i>
            </a>
            <a href="{{ replyPath }}?quote={{post.id}}" 
                class="btn btn-outline-secondary btn-sm" 
                data-bs-toggle="tooltip" 
                data-bs-placement="top"
                title="Citer">
                <i class="bi bi-quote"></i>
            </a>
        {% endif %}
    {% endif %}
</div>